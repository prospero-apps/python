#:kivy 1.11.1
# File name: gameover.kv
#:import gameover gameover

<GameoverScreen>: 
    canvas:
        Color:
            rgba: 1, 1, .8, 1
        Rectangle:
            pos: self.pos
            size: self.size 

    game: root.manager
    
    BoxLayout:
        orientation: 'vertical'   
     
        BoldLabel:
            font_size: 100
            text: 'Game Over'
            halign: 'center'
        BoldLabel:
            font_size: 40
            # We're going to use the game_over_reason property of the Game class
            # to display the reason why the game is over.
            text: root.game.game_over_reason
            halign: 'center'
        BoldLabel:
            font_size: 30
            # Now we can display the actual info about the winner.
            text: root.game.winner_text
            halign: 'center'  

        # the button         
        BoxLayout: 
            spacing: 50            
            pos_hint: {'center_x': .5, 'center_y': .5} 
            size_hint: None, None
            size: 450, 200   
            RedButton:
                text: 'Play Again'
                pos_hint: {'x': 0, 'center_y': .5}
                on_press: root.manager.current = 'settingsscreen'
            RedButton:
                text: 'Quit'
                pos_hint: {'right': 1, 'center_y': .5} 